{
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": "./",
    "outDir": "./build",
    "rootDir": "./src",
    "allowJs": true,
    "esModuleInterop": true,
    "target": "ES2020",
    "moduleResolution": "node",
    "skipLibCheck": true,
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.js"],
  "exclude": ["vite.config.js", "node_modules"]
}
